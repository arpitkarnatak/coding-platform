generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "postgresql"
  url      = env("DATABASE_URL")
}

model Problem {
  id              String        @id @unique
  title           String
  difficulty      String
  tags            Json
  details         ProblemDetail @relation(fields: [problemDetailId], references: [id], onDelete: Cascade, onUpdate: Cascade)
  problemDetailId String @unique
}

model ProblemDetail {
  id              String    @id @unique
  description     String
  examples        Json
  hiddenTests     Json
  boilerplateCode String
  runnerCode      String
  problem         Problem?
}
